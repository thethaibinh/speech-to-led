<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Địa chỉ IP mạch điều khiển"
        android:text="192.168.100.1"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn_get_para"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lấy tham số cấu hình màn hình" />


    <Button
        android:id="@+id/btn_send_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đặt thời gian" />

    <Button
        android:id="@+id/btn_send_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gửi dữ liệu thủ công" />

    <EditText
        android:id="@+id/txt_to_sent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gõ hoặc nói vào văn bản muốn gửi đi."
        android:text="Tôi là Tú."
        android:textAlignment="center" />
    <Button
        android:id="@+id/btn_to_talk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BẤM ĐỂ NÓI.." />


</LinearLayout>